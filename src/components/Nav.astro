const { current = "" } = Astro.props;
---

<style>
  nav {
    align-items: center;
    display: flex;
    flex: 1;
    font-family: var(--font-family-sans);
    font-weight: 700;
    justify-content: flex-end;
    text-transform: uppercase;
  }

  a {
    color: inherit;
    text-decoration: none;
    padding: 10px 5px;
    display: block;
    position: relative;
    text-align: center;
  }

  a:not(.selected) {
    opacity: 0.7;
  }

  a::before {
    content: "";
    position: absolute;
    transition: transform 0.3s ease;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background: var(--text-secondary);
    transform: scaleX(0);
  }

  a:hover::before,
  .selected::before {
    transform: scaleX(1);
  }

  .selected::before {
    background: rgb(0 157 220);
  }

  .theme-toggle-container {
    width: 75px;
  }
</style>

<nav>
  <a class={`min-w-[60px] ${current === "" ? "selected" : ""}`} href="/">home</a
  >
  <a
    class={`min-w-[80px] ${current === "about" ? "selected" : ""}`}
    href="/about">about</a
  >
  <a class={`min-w-[60px] ${current === "blog" ? "selected" : ""}`} href="/blog"
    >blog</a
  >
</nav>
